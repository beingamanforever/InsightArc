{
  "name": "Content Tracker",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Tracks articles and videos you read/watch and stores metadata.",
  "permissions": ["tabs", "storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/watch*",
        "*://*.medium.com/*",
        "*://*.nytimes.com/*",
        "*://*.bbc.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Content Tracker"
  }
}
